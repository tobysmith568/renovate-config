{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableDependencyDashboard",
    ":preserveSemverRanges",
    "npm:unpublishSafe"
  ],
  "automergeType": "branch",
  "packageRules": [
    {
      "groupName": "npm auto-merge",
      "matchPackagePatterns": [
        "cspell",
        "cypress",
        "eslint",
        "jest",
        "^next$",
        "prettier",
        "testing-library",
        "typescript"
      ],
      "automerge": true
    },
    {
      "groupName": "node",
      "matchPackagePatterns": ["^@types/node$", "^node$"],
      "allowedVersions": "^16"
    }
  ]
}
