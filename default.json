{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableDependencyDashboard",
    ":preserveSemverRanges"
  ],
  "automergeType": "branch",
  "stabilityDays": 3,
  "packageRules": [
    {
      "groupName": "node",
      "matchPackagePatterns": ["^@types/node$", "^node$"],
      "allowedVersions": "^18",
      "automerge": true
    },
    {
      "groupName": "npm auto-merge (linting)",
      "matchPackagePatterns": [
        "^@.*?\/prettier-plugin",
        "^@.*?\/eslint-plugin",
        "^@.*?\/eslint-config",
        "^@cspell\/dict",
        "^@eslint\/",
        "^@prettier\/",
        "^cspell$",
        "^eslint$",
        "^eslint-plugin",
        "^eslint-config",
        "^prettier$",
        "^prettier-plugin"
      ],
      "automerge": true
    },
    {
      "groupName": "npm auto-merge (development)",
      "matchPackagePatterns": [
        "^@types\/react$",
        "^next$",
        "^react$",
        "^typescript$"
      ],
      "automerge": true
    },
    {
      "groupName": "npm auto-merge (testing)",
      "matchPackagePatterns": [
        "cypress",
        "jest",
        "testing-library"
      ],
      "automerge": true
    },
    {
      "groupName": "NuGet auto-merge (Microsoft)",
      "matchPackagePatterns": [
        "^Microsoft\\.Extensions\\.",
        "^Microsoft\\.AspNetCore\\.",
        "Microsoft\\.NET\\.Test\\.Sdk"
      ],
      "automerge": true
    },
    {
      "groupName": "NuGet auto-merge (NUnit)",
      "matchPackagePatterns": [
        "^NUnit$",
        "^NUnit3TestAdapter$"
      ],
      "automerge": true
    },
    {
      "groupName": "GitHub Actions auto-merge",
      "matchPackagePatterns": [
        "^actions/setup-dotnet$",
        "^codecov/codecov-action$"
      ],
      "automerge": true
    },
    {
      "groupName": "Disable Nx monorepos",
      "matchPackagePatterns": [
        "^nx$",
        "^@nrwl\/"
      ],
      "enabled": false
    }
  ]
}
