{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableDependencyDashboard",
    ":preserveSemverRanges",
    "npm:unpublishSafe"
  ],
  "automergeType": "branch",
  "packageRules": [
    {
      "groupName": "npm auto-merge (linting)",
      "matchPackagePatterns": [
        "cspell",
        "eslint",
        "prettier"
      ],
      "automerge": true
    },
    {
      "groupName": "npm auto-merge (development)",
      "matchPackagePatterns": [
        "^@types/react$",
        "^next$",
        "^react$",
        "^typescript$"
      ],
      "automerge": true
    },
    {
      "groupName": "npm auto-merge (testing)",
      "matchPackagePatterns": [
        "cypress",
        "jest",
        "testing-library"
      ],
      "automerge": true
    },
    {
      "groupName": "node",
      "matchPackagePatterns": ["^@types/node$", "^node$"],
      "allowedVersions": "^16"
    }
  ]
}
